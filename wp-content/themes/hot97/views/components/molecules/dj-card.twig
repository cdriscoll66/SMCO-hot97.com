<article class="m-dj-card">
    {% if post.thumbnail %}
        <a class="m-dj-card__image-link" href="{{ post.link }}" aria-label="{{ post.title }}">
            {{ post.thumbnail }}
        </a>
    {% endif %}
    <h1 class="m-dj-card__title"><a class="a-arrow-link" href="{{ post.link }}">{{ post.title }}</a></h1>
    {% if post.shows %}
        <ul class="m-dj-card__shows">
        {% for show in post.shows %}
            <li class="m-dj-card__show">
                <h2 class="m-dj-card__show-name">{{ show.show_name }}</h2>
                <p class="m-dj-card__show-time">{{ show.show_time }}</p>
            </li>
        {% endfor %}
        </ul>
    {% endif %}
</article>
