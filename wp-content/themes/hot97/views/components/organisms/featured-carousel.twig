{% if group %}
    <section class="o-featured-carousel">
        <div class="m-section-header">
            <h2 class="m-section-header__heading a-section-heading">{{ group.term.name }}</h2>
            <a class="a-arrow-link a-arrow-link--yellow m-section-header__view-all" href="{{ group.term.link }}">View All {{ group.term.name }}</a>
        </div>

        {% if group.posts %}
            <ul class="o-featured-carousel__list js-featured-carousel">
                {% for post in group.posts %}
                    <li class="o-featured-carousel__item js-featured-carousel-slide">
                        {% include "components/molecules/card.twig" %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </section>
{% elseif featured_posts %}
    <section class="o-featured-carousel">
        <div class="m-section-header">
            <h2 class="m-section-header__heading a-section-heading">Featured</h2>
        </div>

        <ul class="o-featured-carousel__list js-featured-carousel">
            {% for post in featured_posts.posts %}
                <li class="o-featured-carousel__item js-featured-carousel-slide">
                    {% include "components/molecules/card.twig" %}
                </li>
            {% endfor %}
        </ul>
    </section>
{% endif %}
