{% extends "base.twig" %}

{% block banner %}
<div class="m-marquee-title">
    <div class="m-marquee-title__inner">
        <h1>{{ title }}</h1>
            {% for i in 0..8 %}
                <span>{{ title }}</span>
            {% endfor %}
    </div>
</div>

{% if featured_post %}
    {% include "components/molecules/feature-card.twig" with {
        'post': featured_post
    } %}
{% endif %}

{% endblock %}

{% block content %}

    {% if content %}
    <div class="entry-content">
        {{ content|raw }}
    </div>
    {% endif %}

    {% if posts|length > 0 %}
        <ul class="posts o-post-feed">
            {% include "templates/partials/post-feed.twig" %}
        </ul>
    {% else %}
        <p>No results found.</p>
    {% endif %}

    <span class="load-more-observer">load</span>

{% endblock %}

{% block sidebar %}
    {% include "components/molecules/archive-sidebar.twig" %}

    <div class="m-adspace m-adspace--post-sidebar">
        <span></span>
    </div>
{% endblock %}
