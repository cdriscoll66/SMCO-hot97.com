{% extends "base.twig" %}

{% block banner %}
<div class="m-marquee-title">
    <div class="m-marquee-title__inner">
        <h1>{{ title }}</h1>
            {% for i in 0..8 %}
                <span>{{ title }}</span>
            {% endfor %}
    </div>
</div>

{% if featured_post %}
    {% include "components/molecules/feature-card.twig" with {
        'post': featured_post
    } %}
{% endif %}

{% endblock %}

{% block content %}

    {% if content %}
    <div class="entry-content">
        {{ content|raw }}
    </div>
    {% endif %}

    {% if posts|length > 0 %}
        <ul class="posts o-post-feed js-post-collect">
            {% include "templates/partials/post-feed.twig" %}
        </ul>
    {% else %}
        <p>No results found.</p>
    {% endif %}
    <a id="load-more-button" class="js-load-more post-feed__button" data-url={{ feedurl }}> load more </a>
{% endblock %}

{% block sidebar %}
    {% include "components/molecules/archive-sidebar.twig" %}

    <div class="m-adspace m-adspace--post-sidebar is-dark-theme">
        <div class="ione-ad" data-pos="1"></div>
    </div>
{% endblock %}
