{% extends "base.twig" %}

{% block content %}
    <main id="main">
        <h1>{{ title }}</h1>

        {# Hero #}

        {# Featured Categories #}
        {% if featured|length > 0 %}
            {% for group in featured %}
                <h2>{{ group.term.name }}</h2>

                {% if group.posts|length > 0 %}
                    <ul class="posts">
                        {% for post in group.posts %}
                            <li class="posts__item">
                                {% include "components/molecules/card.twig" %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endfor %}
        {% endif %}

        {# DJs #}

        {# Marketing Content #}
        {{ content|raw }}

        {# Other Categories #}
        {% if other|length > 0 %}
            {% for group in other %}
                <h2>{{ group.term.name }}</h2>
                <a href="{{ group.term.link }}">View All {{ group.term.name }}</a>

                {% if group.posts|length > 0 %}
                    <ul class="posts">
                        {% for post in group.posts %}
                            <li class="posts__item">
                                {% include "components/molecules/card.twig" %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endfor %}
        {% endif %}

    </main>
{% endblock %}
