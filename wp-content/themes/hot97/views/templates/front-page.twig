{% extends "base.twig" %}

{% block content %}
    <main id="main">
        <h1>{{ title }}</h1>

        {# Hero #}
        {% if hero %}
            {% for post in hero %}
                {% include "components/molecules/hero.twig" %}
            {% endfor %}
        {% endif %}

        {# Featured Categories #}
        {% if featured %}
            {% for group in featured %}
                <section class="o-featured-carousel">
                    <div class="m-section-header">
                        <h2 class="m-section-header__heading">{{ group.term.name }}</h2>
                        <a class="a-arrow-link a-arrow-link--yellow m-section-header__view-all" href="{{ group.term.link }}">View All {{ group.term.name }}</a>
                    </div>

                    {% if group.posts %}
                        <ul class="o-featured-carousel__list js-featured-carousel">
                            {% for post in group.posts %}
                                <li class="o-featured-carousel__item js-featured-carousel-slide">
                                    {% include "components/molecules/card.twig" %}
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </section>
            {% endfor %}
        {% endif %}

        {# DJs #}
        {% include "components/organisms/dj-carousel.twig" %}


        {# Marketing Content #}
        {{ content|raw }}

        {# Other Categories #}
        {% if other %}
            {% for group in other %}
                <h2>{{ group.term.name }}</h2>
                <a href="{{ group.term.path }}">View All {{ group.term.name }}</a>

                {% if group.posts %}
                    <ul class="posts">
                        {% for post in group.posts %}
                            <li class="posts__item">
                                {% include "components/molecules/card.twig" %}
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            {% endfor %}
        {% endif %}
    </main>
    {% include "components/organisms/prefooter-home.twig" %}
{% endblock %}
