{% extends "base.twig" %}

{% block content %}
    <main id="main">
        <h1>{{ title }}</h1>
        {% if byline %}
            <p>{{ byline }}</p>
        {% endif %}
        {% if content_category %}
            <p><a href="{{ content_category_link }}">{{ content_category }}</a></p>
        {% endif %}
        {% if category %}
            <p><a href="{{ category_link }}">{{ category }}</a></p>
        {% endif %}
        {{ content|raw }}
    </main>
{% endblock %}
